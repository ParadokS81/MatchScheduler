{
  "name": "matchscheduler-functions",
  "description": "Cloud Functions for MatchScheduler",
  "engines": {
    "node": "20"
  },
  "main": "src/index.js",
  "scripts": {
    "test": "jest test/integration/",
    "test:watch": "jest test/integration/ --watch",
    "test:teams": "jest test/integration/teams.integration.test.js",
    "test:availability": "jest test/integration/availability.integration.test.js",
    "test:scheduled": "jest test/integration/scheduled.integration.test.js",
    "test:integration:full": "node test/integration/runAllTests.js",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^5.0.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.0.0",
    "node-fetch": "^2.7.0",
    "dotenv": "^16.0.0"
  },
  "jest": {
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
    "testEnvironment": "node"
  },
  "private": true
}
